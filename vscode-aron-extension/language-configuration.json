{
    "comments": {
        "lineComment": "#"
    },
    "brackets": [
        ["(", ")"]
    ],
    "autoClosingPairs": [
        { "open": "(", "close": ")" },
        { "open": "\"", "close": "\"" }
    ],
    "surroundingPairs": [
        ["(", ")"],
        ["\"", "\""]
    ],
    "wordPattern": "[א-ת][א-ת0-9_]*|[0-9]+(\\.[0-9]+)?",
    "directionality": "rtl"
}
