# בדיקת ערכים בוליאניים בשפת אהרן

# הגדרת משתנים בוליאניים
קבע אמיתי = אמת
קבע שקרי = שקר

# הדפסת ערכים בוליאניים
הדפס "ערך אמת:"
הדפס אמיתי

הדפס "ערך שקר:"
הדפס שקרי

# בדיקת תנאים והשוואות
הדפס "בדיקת השוואות:"
הדפס 5 > 3  # אמת
הדפס 5 < 3  # שקר
הדפס 5 == 5 # אמת
הדפס 5 != 5 # שקר

# משפטי תנאי
אם אמיתי == אמת
    הדפס "התנאי מתקיים"
אחרת
    הדפס "התנאי לא מתקיים"
סוף

אם שקרי == אמת
    הדפס "זה לא יודפס"
אחרת
    הדפס "התנאי לא מתקיים"
סוף
